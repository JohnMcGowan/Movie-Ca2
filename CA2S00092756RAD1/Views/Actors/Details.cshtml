        <li class="list-group-item list-group-item-info alert-info">@Html.DisplayNameFor(model => model.FirstName)</li>
        <li class="list-group-item list-group-item-info alert-info">@Html.DisplayNameFor(model => model.Surname)</li>
        <li class="list-group-item list-group-item-info alert-info">@Html.DisplayNameFor(model => model.gender)</li>
    </ul>
    <div class="list-group alert-info" style="margin-left:15%">
        <a class="list-group-item list-group-item-info alert-info">@Html.DisplayFor(model => model.FirstName)</a>
        <a class="list-group-item list-group-item-info alert-info">@Html.DisplayFor(model => model.Surname)</a>
        <a class="list-group-item list-group-item-info alert-info">@Html.DisplayFor(model => model.gender)</a>
    </div>
