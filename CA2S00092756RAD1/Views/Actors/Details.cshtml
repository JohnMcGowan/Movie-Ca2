    <div class="panel panel-default alert-info">
        <div class="panel-heading alert-info" style="font-size:x-large">Stared In</div>

        @if (Model.movies.Any())
        {
            <table class="table table-condensed table-striped alert-info">
                <tr>

                    <th>
                        @Html.DisplayNameFor(model => model.movies.First().Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.movies.First().RunTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.movies.First().MovieType)
                    </th>
                </tr>
                @if (Model != null)
                {
                    foreach (var item in Model.movies)
                    {
                        <tr>
                            <th>
                                @Html.DisplayFor(modelItem => item.Title)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.RunTime)
                            </th>
                            <th>
                                @Html.DisplayFor(modelItem => item.MovieType)
                            </th>
                        </tr>
                    }
                }

            </table>
        }
